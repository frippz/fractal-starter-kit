{
  "name": "fractal-starter-kit",
  "version": "0.1.0",
  "license": "MIT",
  "dependencies": {
    "@frctl/fractal": "^1.1.7",
    "@frctl/handlebars": "^1.1.5",
    "@frctl/mandelbrot": "^1.2.1"
  },
  "scripts": {
    "start": "concurrently 'yarn run build:watch' 'fractal start --sync'",
    "prebuild": "mkdir -p public/css public/js && touch public/css/styles.css public/js/bundle.js",
    "build": "yarn run build:css && yarn run build:svg && yarn run build:js",
    "prebuild:watch": "yarn run prebuild",
    "build:watch": "concurrently 'yarn run build:watch:css' 'yarn run build:watch:svg' 'yarn run build:watch:js'",
    "build:watch:css": "onchange './components/**/*.css' -i -- yarn run build:css",
    "build:watch:js": "onchange './components/**/*.js' -i -- yarn run build:js",
    "build:watch:svg": "onchange './svg/**' -i -- yarn run build:svg",
    "build:css": "postcss './all.css' -o public/css/styles.css -c postcss.config.js",
    "build:js": "globcat './components/**/*.js' -o public/js/bundle.js",
    "build:svg": "svg-sprite -C svg-sprite.config.json --dest ./components/_sprite svg/*.svg svg/**/*.svg",
    "fractal:build": "fractal build",
    "fractal:build:clean": "rm -rf ./build/*",
    "prefractal:deploy": "yarn run fractal:build",
    "fractal:deploy": "./script/deploy.sh"
  },
  "devDependencies": {
    "clean-css-cli": "^4.3.0",
    "concat": "^1.0.3",
    "concurrently": "^5.1.0",
    "cssnano": "^4.1.10",
    "eslint": "^6.8.0",
    "globcat": "^1.2.2",
    "onchange": "^6.0.0",
    "postcss-cli": "^7.1.0",
    "postcss-custom-properties": "^9.0.1",
    "postcss-import": "^12.0.1",
    "postcss-import-ext-glob": "^1.1.0",
    "stylelint": "^13.2.0",
    "svg-sprite": "^1.3.7",
    "yarn": "^1.22.0"
  }
}
